<Page x:Class="Project.Views.Pages.DirectoryPages.UserDepartmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:modern="http://schemas.modernwpf.com/2019"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      xmlns:tools="clr-namespace:Project.Tools"
      xmlns:wind="clr-namespace:Project.Views.Pages.DirectoryPages.Edit"
      d:DesignHeight="450" d:DesignWidth="1100"
      Title="UserDepartmentsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="📗 Справочник 'Отделы'"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="15,15,0,0" />
        <!-- Таблица с данными -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10,10,10,0"
                  HeadersVisibility="Column"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  FontSize="16"
                  ItemsSource="{Binding TableValue}">
            <DataGrid.Resources>
                <!-- Контекстное меню -->
                <ContextMenu x:Key="RowContextMenu" Width="150" FontSize="18"
                             Visibility="{Binding FlagWriterVisibility}">
                    <MenuItem Header="Просмотр"
                              Icon="👁️"
                              Tag="Show"
                              Height="35"
                              Command="{Binding DataContext.ShowDialogContextMenu, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                        <MenuItem.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiBindingConverter}">
                                <Binding RelativeSource="{RelativeSource Self}" />
                                <Binding Source="{x:Type wind:EditDepartment}" />
                            </MultiBinding>
                        </MenuItem.CommandParameter>
                    </MenuItem>
                    <MenuItem Header="Добавить"
                              Icon="➕"
                              Tag="Add"
                              Height="35"
                              Visibility="{Binding DataContext.FlagWriterVisibility, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                              Command="{Binding DataContext.AddDialogButton, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                              CommandParameter="{x:Type wind:EditDepartment}" />
                    <MenuItem Header="Изменить"
                              Icon="✏️"
                              Tag="Change"
                              Height="35"
                              Visibility="{Binding DataContext.FlagWriterVisibility, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                              Command="{Binding DataContext.ChangeDialogContextMenu, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                        <MenuItem.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiBindingConverter}">
                                <Binding RelativeSource="{RelativeSource Self}" />
                                <Binding Source="{x:Type wind:EditDepartment}" />
                            </MultiBinding>
                        </MenuItem.CommandParameter>
                    </MenuItem>
                    <MenuItem Header="Удалить"
                              Icon="❌"
                              Tag="Delete"
                              Height="35"
                              Visibility="{Binding DataContext.FlagWriterVisibility, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                              Command="{Binding DataContext.ChangeDialogContextMenu, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                        <MenuItem.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiBindingConverter}">
                                <Binding RelativeSource="{RelativeSource Self}" />
                                <Binding Source="{x:Type wind:EditDepartment}" />
                            </MultiBinding>
                        </MenuItem.CommandParameter>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.Resources>
            <!-- Стиль для строк -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="SkyBlue" />
                            <Setter Property="Opacity" Value="0.8"></Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <!-- Основной контент -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Отдел" Binding="{Binding DepartmentName}" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- Блок навигации внизу -->
        <Grid Grid.Row="2" Background="LightSkyBlue" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                        Margin="10">
                <modern:AutoSuggestBox x:Name="SearchTextBox"
                                       Width="300"
                                       VerticalAlignment="Center"
                                       PlaceholderText="Поиск"
                                       Background="White"
                                       FontSize="17"
                                       tools:MVVMPropirties.QuerySubmittedCommand="{Binding SearchCommand}"
                                       Text="{Binding SearchingText, Mode=TwoWay}"
                                       BorderBrush="Gray"
                                       modern:ControlHelper.CornerRadius="5"
                                       QueryIcon="Find">
                </modern:AutoSuggestBox>
                <ui:Button FontSize="18"
                           FontWeight="SemiBold"
                           Content="Сброс"
                           Background="DodgerBlue"
                           Height="35"
                           Margin="10,0"
                           Padding="10,0"
                           modern:ControlHelper.CornerRadius="10"
                           Appearance="Primary"
                           x:Name="RefreshButton"
                           Command="{Binding RefreshCommand}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <ui:Button
                    Icon="ArrowPrevious24"
                    Background="DodgerBlue"
                    Command="{Binding PreviousPageCommand}"
                    Appearance="Primary"
                    FontWeight="Bold"
                    Margin="5, 0"
                    Padding="0"
                    Width="40"
                    Height="35" />
                <TextBlock
                    Text="{Binding CurrentPageText}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="5"
                    FontSize="16" />
                <ui:Button
                    Icon="ArrowNext24"
                    Background="DodgerBlue"
                    Command="{Binding NextPageCommand}"
                    Appearance="Primary"
                    FontWeight="Bold"
                    Margin="5, 0"
                    Padding="0"
                    Width="40"
                    Height="35" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>